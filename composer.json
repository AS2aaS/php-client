{
    "name": "as2aas/php-client",
    "version": "1.1.0",
    "description": "PHP client library for AS2aaS - Making AS2 messaging as simple as sending an email",
    "type": "library",
    "keywords": ["as2", "edi", "b2b", "messaging", "integration", "healthcare", "supply-chain"],
    "homepage": "https://github.com/as2aas/php-client",
    "license": "MIT",
    "authors": [
        {
            "name": "AS2aaS Team",
            "email": "support@as2aas.com",
            "homepage": "https://as2aas.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "orchestra/testbench": "^6.0|^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "AS2aaS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AS2aaS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "AS2aaS\\Laravel\\AS2ServiceProvider"
            ],
            "aliases": {
                "AS2": "AS2aaS\\Laravel\\Facades\\AS2"
            }
        }
    }
}
